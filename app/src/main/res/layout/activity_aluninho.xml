<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controle.Activity_aluno">

    <Spinner
        android:id="@+id/spinnerTurmas"
        android:layout_width="110dp"
        android:layout_height="34dp"

        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/bg_spinner_rounded"
        android:popupBackground="@color/bgColor"
        app:layout_constraintStart_toEndOf="@+id/spinnerCursos"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listTurmaAdd"
        android:layout_width="360dp"
        android:layout_height="266dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="36dp"
        android:background="@color/bgColor"
        app:layout_constraintBottom_toTopOf="@+id/btnSalvarCursos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddCurso"
        app:layout_constraintVertical_bias="0.715" />

    <Button
        android:id="@+id/btnSalvarCursos"
        android:layout_width="336dp"
        android:layout_height="71dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_button_rounded"
        android:text="salvar cursos"
        android:textColor="@color/bgColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_button_rounded"
        android:text="Adicionar"
        android:textColor="@color/bgColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCursos"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"

        android:layout_marginTop="44dp"
        android:background="@drawable/bg_spinner_rounded"
        android:popupBackground="@color/bgColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editSeeTurmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/bg_button_rounded"
        android:text="ver turmas"
        app:layout_constraintBottom_toTopOf="@+id/listTurmaAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCursos"
        app:layout_constraintVertical_bias="0.523" />

</androidx.constraintlayout.widget.ConstraintLayout>

