<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/nome_Prof"
        android:layout_width="341dp"
        android:layout_height="107dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edittext_rounded"
        android:paddingLeft="30dp"
        android:paddingTop="3dp"
        android:text="Marcelo"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mensagem_Prof"
        android:layout_width="281dp"
        android:layout_height="54dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="16dp"
        android:text="adahsoudhaoshda"
        app:layout_constraintBottom_toBottomOf="@+id/nome_Prof"
        app:layout_constraintEnd_toEndOf="@+id/nome_Prof"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nome_Prof" />

    <TextView
        android:id="@+id/turmaMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="2000/2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textAux2"
        app:layout_constraintTop_toBottomOf="@+id/nome_Prof" />

    <TextView
        android:id="@+id/textAux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Para:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toStartOf="@+id/turmaMsg"
        app:layout_constraintTop_toBottomOf="@+id/nome_Prof" />

    <TextView
        android:id="@+id/textAux2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Data:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dataMsg"
        app:layout_constraintTop_toBottomOf="@+id/nome_Prof" />

    <TextView
        android:id="@+id/dataMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="124dp"
        android:text="12/10/19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_Prof"
        tools:text="@tools:sample/date/mmddyy" />

</android.support.constraint.ConstraintLayout>