<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controle.Activity_Gerenciar_Turmas">

    <Spinner
        android:id="@+id/spinnerTurmasConf"
        android:layout_width="150px"
        android:layout_height="37dp"

        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/bg_spinner_rounded"
        android:popupBackground="@color/bgColor"
        app:layout_constraintStart_toEndOf="@+id/spinnerCursosConf"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listTurmaAdd"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        android:background="@color/bgColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSeeMensagens" />

    <Button
        android:id="@+id/btnSeeMensagens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_button_rounded"
        android:text="Adicionar"
        android:textColor="@color/bgColor"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/listTurmaAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCursosConf"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"

        android:layout_marginTop="44dp"
        android:background="@drawable/bg_spinner_rounded"
        android:popupBackground="@color/bgColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

